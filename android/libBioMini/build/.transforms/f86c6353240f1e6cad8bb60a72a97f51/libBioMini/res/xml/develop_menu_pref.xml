<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory
        android:title="@string/prefcategory_lfd">
        <ListPreference
            android:defaultValue="0"
            android:key="pref_lfd_file_format"
            android:title="@string/pref_lfdfileformat"
            android:summary="@string/pref_summery_lfdfileformat"
            android:entries="@array/lfd_file_format"
            android:entryValues="@array/lfd_file_format_value"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="save_capture_image"
            android:title="@string/pref_save_capture_image"
            android:summary="@string/pref_save_capture_image_summery"
            />
        <Preference
            android:defaultValue="false"
            android:key="pref_lfd_from_image_file"
            android:title="@string/pref_lfdfromimagefile"
            android:summary="@string/pref_summery_lfdfromimagefile"
            />
        <Preference
            android:defaultValue="false"
            android:key="pref_lfd_from_folder"
            android:title="@string/pref_lfdfromfolder"
            android:summary="@string/pref_summery_lfdfromfolder"
            />
        <Preference
            android:title="@string/pref_lfd_score"
            android:key="pref_lfdscore"
            android:summary=""
            />
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory
        android:title="@string/prefcategory_util">
        <Preference
            android:key="clear_image_folder"
            android:title="@string/pref_clear_image_folder"
            />
    </androidx.preference.PreferenceCategory>
</PreferenceScreen>